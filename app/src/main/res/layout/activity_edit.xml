<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.example.librarymanager.EditActivity" />
        <variable
            name="viewModel"
            type="com.example.librarymanager.viewmodel.EditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditActivity">

        <include
            android:id="@+id/edit_include"
            layout="@layout/dialog_add_book"
            app:title="@={viewModel.title}"
            app:author="@={viewModel.author}"
            app:publishYear="@={viewModel.publishYear}"
            app:isbn="@={viewModel.isbn}" />

        <Button
            android:id="@+id/bt_edit_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_book_save"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>